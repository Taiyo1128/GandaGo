<h1>vlogの投稿</h1>
<h3>一覧ページ</h3>
<%= link_to "新規投稿へ", new_vlog_path %>
<div class="vlogs-container">
  <% @vlogs.each do |t| %>
    <div class="vlog">
      <%= image_tag t.image_url, size: "250x200" if t.image? %>
      <%= t.vlog_name %>

      <% if user_signed_in? %>
     <% if current_user.already_liked?(t) %>
        <%= link_to vlog_like_path(id: t.id, vlog_id: t.id), data: { turbo_method: :delete } do %>
            <p>いいねを取り消す</p><%= t.likes.count %>
        <% end %>
     <% else %>
        <%= link_to vlog_likes_path(id: t.id, vlog_id: t.id), data: { turbo_method: :post }  do %>
            <p>いいね</p><%= t.likes.count %>
        <% end %>
     <% end %>
<% else %>
    <p>いいねの数 = </p><%= t.likes.count %>
<% end %>

<% @rank_vlogs.each do |t| %>
  <% end %>
  
      <%= t.information %>
      <%= link_to "詳細へ", vlog_path(t.id) %>
      <% if user_signed_in? && current_user.id == t.user_id %>
      <%= link_to "編集する", edit_vlog_path(t.id) %>
      <%= button_to "削除する", vlog_path(t.id), method: :delete %>
    <% end %> 
    </div>
  <% end %>
</div>

<%= link_to "いいねページ", like_path %>