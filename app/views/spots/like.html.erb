<% @spots.each do |t| %>
    <div class="spot">

      <% if user_signed_in? %>
     <% if current_user.already_likebd?(t) %>
     <%= image_tag t.image_url, size: "250x200" if t.image? %>
      <%= t.spot_name %>
        <%= link_to spot_likeb_path(id: t.id, spot_id: t.id), data: { turbo_method: :delete } do %>
            <p>いいねを取り消す</p><%= t.likebs.count %>
        <% end %>


      <%= t.spot_name %>
      <%= t.information %>
      <%= link_to "詳細へ", spot_path(t.id) %>
      <%= link_to "編集する", edit_spot_path(t.id) %>
      <%= button_to "削除する", spot_path(t.id), method: :delete %>
    </div>
  <% end %>
  <% end %>
  <% end %>